{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        "dialog:default",
        "dialog:allow-open",
        "dialog:allow-ask",
        "dialog:allow-confirm",
        "dialog:allow-message",
        "dialog:allow-save",
        "fs:default",
        "fs:allow-app-write",
        "fs:allow-app-meta-recursive",
        "fs:allow-app-read",
        "fs:allow-app-read-recursive",
        "fs:allow-app-write-recursive",
        "fs:allow-data-write-recursive",
        "process:default",
        "fs:allow-desktop-read-recursive",
        "fs:allow-desktop-meta-recursive",
        "fs:allow-resource-read-recursive",
        "fs:allow-resource-meta-recursive",
        {
            "identifier": "fs:allow-exists",
            "allow": [{ "path": "/**" }]
        },
        {
            "identifier": "fs:allow-app-write-recursive",
            "allow": [{ "path": "/**" }]
        },
        {
            "identifier": "fs:allow-app-write",
            "allow": [{ "path": "/**" }]
        },
        {
            "identifier": "fs:allow-app-read",
            "allow": [{ "path": "/**" }]
        },
        {
            "identifier": "fs:allow-app-read-recursive",
            "allow": [{ "path": "/**" }]
        },
        {
            "identifier": "fs:default",
            "allow": [{ "path": "/**" }]
        }
    ]
}
